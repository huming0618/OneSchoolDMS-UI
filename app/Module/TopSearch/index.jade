html
	head
		link(rel="stylesheet", type="text/css", href="/css/oneschool-bootstrap.css")
		link(rel="stylesheet", type="text/css", href="/bower_components/fontawesome/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css", href="/css/app.css")
	body
		div.row
			div.input-group(style="width:300px;margin:20px;")
				input.form-control(type="text", placeholder="关键字")
				span.input-group-btn
					button.btn.btn-primary(type="button") 
						span.glyphicon.glyphicon-align-justify
						| &nbsp;
							
		div.row
			div.list-group(role="search-result-panel", style="width:300px;margin:20px;")
				a.list-group-item(style="border-left: 5px solid #F28570;", href="#")
					| 李四川
				a.list-group-item(style="border-left: 5px solid #7CBAF2;", href="#")
					| 四川省成都市武侯区中心小学
				a.list-group-item(style="border-left: 5px solid #47F2AD;", href="#")
					| 四川省成都市红哈村
		div.row
			div.list-group(role="search-result-panel", style="width:300px;margin:20px;")
				div.list-group-item(style="border-left: 5px solid #F28570;", href="#")
					span
						| 已捐助的学生
					span(style="vertical-align:middle;display:table-cell;text-align:center;position:absolute;right:0px;top:0px;height:100%;width:60px;")
						更改
				div.list-group-item(style="border-left: 5px solid #7CBAF2;", href="#")
					span
						| 未捐助的学生
					button.btn.btn-link(style="position:absolute;right:10px;top:6px;")
						span.glyphicon.glyphicon-pencil
		div.row(style="padding:30px;")
			table.table(style='width:600px;')
				thead
					tr
						th(style='width:50px')  
						th 条件
						th 选项
						th 操作
				tbody
					tr
						td
							span.glyphicon.glyphicon-file
						td
							a(href='#')  学生地区
						td
							ul(style="list-style-type:none")
								li
									span.label.label-info 四川凉山州 x
								li
									span.label.label-danger 贵州贵阳盘古县中心小学 x
						td
							button.btn.btn-link.btn-xs(type='button') 添加
							button.btn.btn-link.btn-xs(type='button') 清除
		script(type="text/javascript", src="/bower_components/jquery/dist/jquery.min.js")
		script(type="text/javascript", src="/bower_components/bootstrap/dist/js/bootstrap.js")

			
